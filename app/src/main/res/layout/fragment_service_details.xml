    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ServiceDetailsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/salonServiceDetailBg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/salon_image" />

            <ImageView
                android:id="@+id/backArrowImage"
                android:layout_marginTop="4dp"
                android:layout_marginStart="22dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/search_bar_bg"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/premiumSalonText"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/salonServiceDetailBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium Palour" />

            <ImageView
                android:id="@+id/serviceDetailsIcon"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="22dp"
                app:layout_constraintStart_toEndOf="@id/premiumSalonText"
                app:layout_constraintTop_toBottomOf="@id/salonServiceDetailBg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/star_" />

            <TextView
                android:id="@+id/serviceDetailsRattingIconValue"
                android:layout_marginTop="2dp"
                android:layout_marginStart="4dp"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/serviceDetailsIcon"
                app:layout_constraintStart_toEndOf="@id/serviceDetailsIcon"
                app:layout_constraintTop_toTopOf="@id/serviceDetailsIcon"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:text="3.5"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon_phone"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toBottomOf="@id/serviceDetailsRattingIconValue"
                app:layout_constraintTop_toTopOf="@id/serviceDetailsRattingIconValue"
                app:layout_constraintStart_toEndOf="@+id/serviceDetailsRattingIconValue"
                android:src="@drawable/baseline_phone"
                android:layout_width="18dp"
                android:layout_height="18dp" />

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="@id/icon_phone"
                app:layout_constraintTop_toTopOf="@id/icon_phone"
                app:layout_constraintStart_toEndOf="@id/icon_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call" />

            <ImageView
                android:id="@+id/location_icon"
                android:layout_marginTop="4dp"
                android:src="@drawable/location"
                app:layout_constraintStart_toStartOf="@id/premiumSalonText"
                app:layout_constraintTop_toBottomOf="@id/premiumSalonText"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/gray"></ImageView>

            <TextView
                android:id="@+id/salonAddress"
                android:textColor="@color/gray"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:textSize="12dp"
                android:text="2715 Ash Dr. San Jose, South Dakota 83475"
                app:layout_constraintBottom_toBottomOf="@id/location_icon"
                app:layout_constraintStart_toEndOf="@id/location_icon"
                app:layout_constraintTop_toTopOf="@id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <TextView
                android:text="5KM"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/salonAddress"
                app:layout_constraintTop_toTopOf="@id/salonAddress"
                android:textColor="@color/black"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:textSize="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

            <com.google.android.material.tabs.TabLayout
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/salonAddress"
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:tabGravity="fill"
                app:tabMode="fixed" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tab_layout"
                android:labelFor="@id/tab_layout" />


