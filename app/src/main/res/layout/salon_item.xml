<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/parlourImageCard"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/RegisterSalonImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/salon_image"></ImageView>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/parlourNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:text="Parlour Name"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/parlourImageCard"
            app:layout_constraintTop_toTopOf="@id/parlourImageCard" />

        <ImageView
            android:id="@+id/DistanceIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/salon_distance"
            app:layout_constraintStart_toStartOf="@id/parlourNameText"
            app:layout_constraintTop_toBottomOf="@id/parlourNameText"></ImageView>

        <TextView
            android:id="@+id/distanceValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-2dp"
            android:text="2KM"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/DistanceIcon"
            app:layout_constraintTop_toTopOf="@id/DistanceIcon"
            tools:layout_editor_absoluteX="132dp" />

        <ImageView
            android:id="@+id/rattingIcon"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/star_"
            app:layout_constraintStart_toEndOf="@id/distanceValue"
            app:layout_constraintTop_toTopOf="@id/distanceValue"></ImageView>

        <TextView
            android:id="@+id/rattingIconValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="1dp"
            android:text="4.5"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/rattingIcon"
            app:layout_constraintTop_toTopOf="@id/rattingIcon" />

        <ImageView
            android:id="@+id/locationImage"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/location"
            app:layout_constraintStart_toStartOf="@id/DistanceIcon"
            app:layout_constraintTop_toBottomOf="@id/DistanceIcon"></ImageView>

        <TextView
            android:id="@+id/locationAddress"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:gravity="center_vertical"
            android:text="6391 Elgin St. Celina, Delaware "
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@id/locationImage"
            app:layout_constraintTop_toBottomOf="@id/DistanceIcon"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>