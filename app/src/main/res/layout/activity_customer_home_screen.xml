<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_marginTop="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cutomer.CustomerHomeScreen.CustomerHomeScreenActivity">
<!--    https://dribbble.com/shots/25700047-Book-beauty-appointments-for-hair-makeup-or-nails-in-seconds-->
<!--    https://dribbble.com/shots/24517914-BlissBo-Beauty-Wellness-App   -->
<!--    https://dribbble.com/shots/25673623-Barber-Booking-Mobile-App-->

    <EditText
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:elevation="8dp"
        android:drawableStart="@drawable/salon_search_bar"
        android:padding="16dp"
        android:drawablePadding="12dp"
        android:id="@+id/search_bar"
        android:background="@drawable/search_bar_bg"
        android:hint="Search.."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="50dp">
    </EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/search_bar"
        android:id="@+id/salonList"
        tools:listitem="@layout/salon_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>