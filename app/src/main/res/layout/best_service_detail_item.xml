<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:id="@+id/salon_detail_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="327dp"
        android:layout_height="391dp">

        <ImageView
            android:id="@+id/salon_detail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/salon_image">
        </ImageView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/serviceName"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Hair Cutting"
                android:textColor="@color/white"
                android:layout_marginTop="220dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:id="@+id/servicePrize"
                android:textSize="24sp"
                android:textStyle="bold"
                android:text="Rs 30.00"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/serviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <Button
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:text="Add Now"
                app:layout_constraintTop_toBottomOf="@id/servicePrize"
                android:layout_width="match_parent"
                android:layout_height="55dp">

            </Button>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>