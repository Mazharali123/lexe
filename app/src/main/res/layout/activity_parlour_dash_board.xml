<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Beatisean.parlourDashBoard.ParlourDashBoardActivity">

    <ImageView
        android:src="@drawable/splash"
        android:id="@+id/profileImage"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp">
    </ImageView>

    <TextView
        android:id="@+id/ParlourName"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="90dp"
        app:layout_constraintTop_toTopOf="@id/profileImage"
        app:layout_constraintStart_toEndOf="@id/profileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parlour">

    </TextView>

    <View
        android:id="@+id/separator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ParlourName"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/todayBooking"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today`s Booking"/>

    <TextView
        android:id="@+id/todayBookingNumber"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toBottomOf="@id/todayBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"/>


    <TextView
        android:id="@+id/currentMonthBooking"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Mon Booking"/>

    <TextView
        android:id="@+id/currentMonthBookingNumber"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/currentMonthBooking"
        android:layout_marginRight="16dp"
        app:layout_constraintTop_toBottomOf="@id/currentMonthBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200"/>





</androidx.constraintlayout.widget.ConstraintLayout>