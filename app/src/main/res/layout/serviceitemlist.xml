<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/serviceItemCardId"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="16dp"
        app:cardCornerRadius="32dp"
        android:background="@drawable/button_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/serviceName"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="24dp"
                android:text="Evening Glam"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:textSize="12sp"
                android:id="@+id/ServiceDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="4dp"
                android:text="ensures the icon stays centered and doesnâ€™t \ngives the  room so it's"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/serviceName"></TextView>

            <ImageButton
                android:id="@+id/addServiceButton"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/button_bg"
                android:contentDescription="Back"
                android:scaleType="centerInside"
                android:padding="14dp"
                android:src="@drawable/plus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/ServiceDetails"
                android:textSize="24sp"
                android:id="@+id/ServicePrize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:text="Rs:3000"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="NotSibling">
            </TextView>

            <TextView
                android:layout_marginEnd="24dp"
                app:layout_constraintTop_toTopOf="@id/ServicePrize"
                android:textSize="24sp"
                android:id="@+id/ServiceTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="0.5h"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="NotSibling">

            </TextView>

            <ImageView
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toStartOf="@id/ServiceTime"
                app:layout_constraintTop_toTopOf="@id/ServiceTime"
                android:id="@+id/clockIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginStart="100dp"
                android:src="@drawable/clock"
                />

            <androidx.cardview.widget.CardView
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="16dp"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/cloclkIcon"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="@id/ServicePrize"
                app:layout_constraintTop_toBottomOf="@id/ServicePrize" >

                <ImageView
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/salon_image" />


            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>