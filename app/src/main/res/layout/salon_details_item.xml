<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/salon_detail_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="110dp"
        android:layout_height="110dp">

        <ImageView
            android:id="@+id/salon_detail_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/salon_image">
        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Hair Style"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="@id/salon_detail_card"
        app:layout_constraintStart_toStartOf="@id/salon_detail_card"
        app:layout_constraintTop_toBottomOf="@id/salon_detail_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>